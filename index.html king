<script>
const banner=document.getElementById("banner")
const logo=document.getElementById("logo")

function openPopup(id){
document.getElementById(id).style.display="flex"
}
function closeAll(){
document.querySelectorAll(".popup").forEach(p=>p.style.display="none")
}

function login(){
if(pass.value==="king2014"){
pass.value=""
closeAll()
openPopup("adminPopup")
}else alert("Password salah")
}

function logout(){
closeAll()
alert("Keluar admin")
}

function uploadImg(input,type){
const r=new FileReader()
r.onload=()=>{
localStorage.setItem(type,r.result)
document.getElementById(type).src=r.result
document.getElementById(type).style.display="block"
}
r.readAsDataURL(input.files[0])
}

function save(){
["canvaKing","canvaMasgabut","capcutKing","capcutMasgabut","wa"]
.forEach(id=>localStorage.setItem(id,document.getElementById(id).value))
alert("Data disimpan")
}

function goLink(id){
const l=localStorage.getItem(id)
if(l) location.href=l
else alert("Link belum diisi admin")
}

function chatWA(){
const wa=localStorage.getItem("wa")
if(wa) location.href="https://wa.me/"+wa+"?text=Admin%20aku%20kurang%20jelas"
else alert("Nomor WA belum diisi")
}

window.onload=()=>{
["banner","logo"].forEach(id=>{
if(localStorage.getItem(id)){
document.getElementById(id).src=localStorage.getItem(id)
document.getElementById(id).style.display="block"
}
})
}
</script>

